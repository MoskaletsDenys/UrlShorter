@model IEnumerable<UrlShorter.Models.Link>
@{
    ViewData["Title"] = "URL Shorter";
}

<div class="text-center">
    <form asp-action="generate" asp-controller="View">
        <div class="form-group">
            <label class="control-label">Enter long link</label>
            <input type="text" name="longLink" class="form-control" />
        </div>
        <div class="form-group">
            <input type="submit" value="Generate" class="btn btn-default" />
        </div>
    </form>
</div>

<a asp-action="DeleteAllLinks">Delete all links</a>

<table class="table">
    <tr>
        <td>Id</td>
        <td>Long link</td>
        <td>Short link</td>
        <td>Creation time</td>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.LongLink</td>
            <td><a href="@ViewBag.Host@item.ShortLink">@ViewBag.Host@item.ShortLink</a></td>
            <td>@item.CreationDateTime</td>
        </tr>
    }
</table>